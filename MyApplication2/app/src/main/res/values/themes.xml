<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#036200EE</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#00FFFFFF</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#00000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#003700B3</item>
        <!-- Customize your theme here. -->
    </style>

<style name="Theme.MyApplication.NoActionBarAndStatusBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:fitsSystemWindows">true</item>
</style>

    <style name="DefaultTitleTextStyle1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">29sp</item>
    </style>

    <style name="DefaultTitleTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">29sp</item>
    </style>

    <style name="DefaultNameStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/effra </item>
    </style>

    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/effra</item>
    </style>

    <style name="DefaultGreyStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/effra </item>
    </style>

    <style name="DefaultSmallGreyStyle">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/effra </item>
    </style>

</resources>